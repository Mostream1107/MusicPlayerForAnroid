<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F7F7FB">

    <TextView
        android:id="@+id/tvTitleMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MusicPlayer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#221C44" />

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="220dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="#E5E2F5"
        android:contentDescription="封面" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textSize="14sp"
            android:textColor="#6E6888" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="00:00"
            android:textSize="14sp"
            android:textColor="#6E6888" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:progressTint="#7051FF"
        android:thumbTint="#7051FF" />

    <TextView
        android:id="@+id/tvLyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="暂无歌词"
        android:textSize="16sp"
        android:textColor="#3A2B6A"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- 播放控制 3 按钮 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_control_outline"
            android:padding="12dp"
            android:src="@android:drawable/ic_media_previous"
            android:tint="#5B3FFF"
            android:contentDescription="上一首" />

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@drawable/bg_control_primary"
            android:elevation="6dp"
            android:padding="20dp"
            android:src="@android:drawable/ic_media_play"
            android:tint="#FFFFFF"
            android:contentDescription="播放或暂停" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_control_outline"
            android:padding="12dp"
            android:src="@android:drawable/ic_media_next"
            android:tint="#5B3FFF"
            android:contentDescription="下一首" />
    </LinearLayout>

    <!-- 功能按钮行 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:weightSum="5">

        <Button
            android:id="@+id/btnToggleList"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/bg_function_chip"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:text="展开列表"
            android:textColor="#3A2B6A"
            android:textSize="12sp"
            android:drawableTop="@android:drawable/ic_menu_sort_by_size"
            android:drawablePadding="4dp"
            android:drawableTint="#3A6FF7"
            android:gravity="center" />

        <Button
            android:id="@+id/btnSpeed"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/bg_function_chip"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:text="1.0X"
            android:textColor="#3A2B6A"
            android:textSize="12sp"
            android:drawableTop="@android:drawable/ic_media_ff"
            android:drawablePadding="4dp"
            android:drawableTint="#3A6FF7"
            android:gravity="center" />

        <Button
            android:id="@+id/btnRefresh"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/bg_function_chip"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:text="刷新列表"
            android:textColor="#3A2B6A"
            android:textSize="12sp"
            android:drawableTop="@android:drawable/ic_popup_sync"
            android:drawablePadding="4dp"
            android:drawableTint="#3A6FF7"
            android:gravity="center" />

        <Button
            android:id="@+id/btnSleepTimer"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/bg_function_chip"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:text="睡眠定时"
            android:textColor="#3A2B6A"
            android:textSize="12sp"
            android:drawableTop="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="4dp"
            android:drawableTint="#3A6FF7"
            android:gravity="center" />

        <Button
            android:id="@+id/btnMode"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/bg_function_chip"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:text="顺序"
            android:textColor="#3A2B6A"
            android:textSize="12sp"
            android:drawableTop="@android:drawable/ic_menu_revert"
            android:drawablePadding="4dp"
            android:drawableTint="#3A6FF7"
            android:gravity="center" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#DDDDDD"
        android:dividerHeight="1dp"
        android:visibility="gone"
        android:background="#FFFFFF" />

</LinearLayout>
